{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "#types/*": ["./types/*"],
      "#services/*": ["./services/*"],
      "#config/*": ["./config/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./global.d.ts", "./node_modules/@types"]
  },
  // "include": ["./src/migrations/*", "./src/types/*"],
  "exclude": ["node_modules"]
}
